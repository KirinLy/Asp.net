@model List<string>

@{
    ViewData["Title"] = "Blob Containers";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <a asp-action="Create" class="btn btn-primary mb-4">Add Container</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Container Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var container in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => container)</td>
                    <td>
                        <form asp-action="Manage" method="post" class="d-inline">
                            <input type="hidden" name="containerName" value="@container" />
                            <button type="submit" class="btn btn-info">Manage</button>
                        </form>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="containerName" value="@container" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
